{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",                                
    "rootDir": "./src",                               
    "moduleResolution": "node",
    "outDir": "./dist", 
    "baseUrl": "./src",                                 
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"]
    }                            
  },
  "exclude" : [
    "./node_modules",
    "public/uploads",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.ejs"
  ]
}
